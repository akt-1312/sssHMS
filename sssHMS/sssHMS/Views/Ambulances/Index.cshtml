@model IEnumerable<sssHMS.Models.Ambulance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ambulance Number
                @*@Html.DisplayNameFor(model => model.Amb_num)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amb_num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Amb_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Amb_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Amb_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
