@model sssHMS.Models.Country
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Country Create</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group col-md-5">
        <label asp-for="CountryName" class="control-label"></label>
        <input id="CountryName" asp-for="CountryName" autocomplete="off" class="form-control" />
        <span asp-validation-for="CountryName" class="text-danger"></span>
    </div>


    <div class="form-group col-md-5">
        <button type="button" id="btnSave" class="btn btn-success">Save</button>
        @*<button type="submit" class="btn btn-success" value="Submit" />*@
        @*<a class="btn btn-primary">Back To List</a>*@
        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $("#CountryName").focus();
            $("#btnSave").click(function () {
                $("form").submit();
            });
            $("input[type='text']").on("click", function () {
                $(this).select();
            });
            $("#CountryName").keypress(function (event) {
                if (event.keyCode == 13) {
                    $("#btnSave").focus();
                }
            });
        });
    </script>
}