@model sssHMS.Models.Country
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Country Delete</h1>
<form method="post" asp-controller="Country" asp-action="Delete">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="CountryId" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group col-md-5">
        <label asp-for="CountryName" class="control-label"></label>
        <input asp-for="CountryName" class="form-control" readonly />
        @*<span asp-validation-for="CountryName" class="text-danger"></span>*@
    </div>


    <div class="form-group col-md-5">
        <button id="btnSave" class="btn btn-success">Delete</button>
        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

