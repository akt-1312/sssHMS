@model sssHMS.Models.Country
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Country Details</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="CountryId" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group col-md-5">
        <label asp-for="CountryName" class="control-label"></label>
        <input asp-for="CountryName" class="form-control" disabled />
        <span asp-validation-for="CountryName" class="text-danger"></span>
    </div>


    <div class="form-group col-md-3">
        @*<input type="submit" class="btn btn-secondary" value="Go Back" />*@
        <a href="@ViewBag.returnUrl" class="btn btn-secondary">Go Back</a>
    </div>


</form>
