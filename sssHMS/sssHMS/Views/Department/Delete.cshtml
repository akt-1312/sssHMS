@model sssHMS.Models.Department
@{
    ViewData["Title"] = "Delete";
    var title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@title Delete</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="DepartmentID" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />

    <div class="form-group col-md-5">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input asp-for="DepartmentName" class="form-control" readonly />

    </div>

    <div class="form-group col-md-3">
        <button type="submit" class="btn btn-success">Delete</button>
        @*<input type="submit" class="btn btn-success" value="Update" />*@
        @*<a class="btn btn-primary" onClick="history.go(-1); return false;">Back To List</a>*@
        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To List</a>
    </div>
</form>






