@model sssHMS.Models.DoctorSchedule
@{
    ViewData["Title"] = "Update";
}

<h1>Delete Doctor Schedule</h1>

<form method="post" asp-controller="DoctorSchedule" asp-action="Delete">
    <div asp-validation-summary="ModelOnly"></div>


    <div asp-validation-summary="ModelOnly"></div>
    <input id="returnUrlID" hidden name="returnUrl" value="@ViewBag.returnUrl" />
    <input hidden asp-for="DoctorScheduleId" />

    <div class="form-group col-md-5">
        <label asp-for="DoctorName" class="control-label"></label>
        <input readonly id="DoctorName" asp-for="DoctorName" class="form-control" />

    </div>
    @*<input hidden id="DepartmentID" value="@ViewBag.DeptID" asp-for="DepartmentID" />*@
    <div class="form-group col-md-5">
        <label asp-for="DepartmentName" class="control-label"></label>
        <input readonly id="DepartmentName" asp-for="DepartmentName" class="form-control" />

    </div>
    <div class="form-group col-md-5">
        <label asp-for="UnitName" class="control-label"></label>
        <input readonly asp-for="UnitName" class="form-control" />

    </div>
    <div class="form-group col-md-5">
        <label asp-for="WeekDay" class="control-label"></label>
        <input readonly asp-for="WeekDay" class="form-control" />

    </div>
    <div class="form-group col-md-5">
        <label asp-for="StartTime" class="control-label"></label>
        <input readonly asp-for="StartTime" class="form-control" />

    </div>
    <div class="form-group col-md-5">
        <label asp-for="EndTime" class="control-label"></label>
        <input readonly asp-for="EndTime" class="form-control" />

    </div>
    <div class="form-group col-md-5">
        <label asp-for="PerPatientTime" class="control-label"></label>
        <input readonly asp-for="PerPatientTime" class="form-control" />

    </div>



    <div class="form-group col-md-5">
        <button id="btnSave" class="btn btn-success">Delete</button>
        <a class="btn btn-secondary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

