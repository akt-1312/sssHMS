@model IEnumerable<Hospital.Models.Driver>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Doctor Name
                @*@Html.DisplayNameFor(model => model.Dr_name)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dr_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Dr_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Dr_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Dr_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
