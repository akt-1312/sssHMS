@model sssHMS.Models.ServicePrice
@{
    ViewData["Title"] = "Create";
}

@{
    <style>
        label {
            display: block;
            text-align: left;
            font-weight: bold;
        }
    </style>
}

<h1>Update Service Price</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />
    <input hidden asp-for="ServicePriceID" />

    <div class="row my-3">
        <div class="col-12">
            <div class="row my-3">
                <div class="col-md-2 offset-1">
                    <label asp-for="ServiceID"></label>
                </div>
                <div class="col-md-4">
                    <select readonly asp-for="ServiceID" asp-items="ViewBag.Services" class="form-control"></select>
                    
                </div>
            </div>

            <div class="row my-3">
                <div class="col-md-2 offset-1">
                    <label asp-for="LocalPrice"></label>
                </div>
                <div class="col-md-4">
                    <input readonly id="LocalPrice" asp-for="LocalPrice" class="form-control" />
                    
                </div>
            </div>


            <div class="row my-3">
                <div class="col-md-2 offset-1">
                    <label asp-for="ForeignerFormulaPrice"></label>
                </div>
                <div class="col-md-4">
                    <input readonly asp-for="ForeignerFormulaPrice" class="form-control" />
                    
                </div>
            </div>
            <div class="row my-3">
                <div class="col-md-2 offset-1">
                    <label asp-for="ForeignerFixedPrice"></label>
                </div>
                <div class="col-md-4">
                    <input readonly asp-for="ForeignerFixedPrice" class="form-control" />
                    
                </div>
            </div>
        </div>

    </div>

    <div class="row my-3">
        <div class="form-group col-md-5 offset-3">
            <button id="btnSave" class="btn btn-success">Save</button>

            <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
        </div>
    </div>


</form>
