@model sssHMS.Models.State
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>State Create</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />


    <div class="form-group col-md-5">
        <label class="control-label">Country</label>
        <select asp-for="CountryId" id="CountryId" class="form-control" asp-items="@ViewBag.Countries"></select>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <span asp-validation-for="CountryId" id="errorSpan" class="text-danger"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="StateName" class="control-label"></label>
        <input id="StateName" asp-for="StateName" class="form-control" />
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <span asp-validation-for="StateName" class="text-danger"></span>
    </div>


    <div class="form-group col-md-5">
        <button type="button" id="btnSave" class="btn btn-success">Save</button>

        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

@section Scripts{
    <script>
    
        $(document).ready(function () {
            $("#StateName").focus();
            $("#btnSave").click(function () {
                $("form").submit();
            });
            $("input[type='text']").on("click", function () {
                $(this).select();
            });
            $("#StateName").keypress(function (event) {
                if (event.keyCode == 13) {
                    $("#btnSave").focus();
                }
            });
        });
</script>
}