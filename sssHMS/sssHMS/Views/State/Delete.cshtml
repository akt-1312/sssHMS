@model sssHMS.Models.State
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>State Delete</h1>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="StateId" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />


    <div class="form-group col-md-5">
        <label class="control-label"></label>
        <select asp-for="CountryId" readonly class="form-control" asp-items="@ViewBag.Countries"></select>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="StateName" class="control-label"></label>
        <input asp-for="StateName" class="form-control" readonly />
        <span asp-validation-for="StateName" class="text-danger"></span>
    </div>


    <div class="form-group col-md-5">
        <button type="button" id="btnSave" class="btn btn-success">Delete</button>
        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnSave").click(function () {
                $("form").submit();
            });
        });
    </script>
}