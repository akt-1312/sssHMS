@model sssHMS.Models.Status
@{
    ViewData["Title"] = "Details";
    var title = "Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@title Details</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="StatusID" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group col-md-5">
        <label asp-for="StatusName" class="control-label"></label>
        <input asp-for="StatusName" class="form-control" readonly />

    </div>
    <div class="form-group col-md-3">
        @*<input type="submit" class="btn btn-secondary" value="Go Back" />*@
        <a href="@ViewBag.returnUrl" class="btn btn-secondary">Go Back</a>
    </div>
</form>






