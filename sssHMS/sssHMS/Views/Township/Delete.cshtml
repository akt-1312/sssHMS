@model sssHMS.Models.Township
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Township Update</h1>
<form method="post" asp-controller="Township" asp-action="Delete">
    <div asp-validation-summary="ModelOnly"></div>
    <input hidden asp-for="TownshipId" />
    <input hidden name="returnUrl" value="@ViewBag.returnUrl" />


    <div class="form-group col-md-5">
        <label asp-for="State.Country" class="control-label"></label>
        <select asp-for="State.CountryId"
                asp-items="@ViewBag.Countries"
                class="form-control" readonly></select>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <span asp-validation-for="State.CountryId"></span>
    </div>
    <div class="form-group col-md-5">
        <label class="control-label">State</label>
        <select asp-for="StateId"
                asp-items="@ViewBag.States" class="form-control"
                readonly></select>
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <span asp-validation-for="StateId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-5">
        <label asp-for="TownshipName" class="control-label"></label>
        <input name="townshipName" asp-for="TownshipName" class="form-control" readonly />
        <span asp-validation-for="TownshipName" class="text-danger"></span>
    </div>


    <div class="form-group col-md-5">
        <button type="button" id="btnSave" class="btn btn-success">Delete</button>
        <a class="btn btn-primary" href="@ViewBag.returnUrl">Back To Main</a>
    </div>


</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnSave").click(function () {
                $("form").submit();
            });
        });
    </script>
}
